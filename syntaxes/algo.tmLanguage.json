{
  "scopeName": "source.algo",
  "name": "ALGO",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#constants" },
    { "include": "#operators" },
    { "include": "#assignment" },
    { "include": "#arrays" },
    { "include": "#record" },
    { "include": "#type" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        { "name": "comment.line.double-slash.algo", "match": "//.*$" }
      ]
    },
    "strings": {
      "patterns": [
        { "name": "string.quoted.double.algo", "begin": "\"", "end": "\"" },
        { "name": "string.quoted.single.algo", "begin": "'", "end": "'" }
      ]
    },
    "numbers": {
      "patterns": [
        { "name": "constant.numeric.float.algo", "match": "\\b\\d+\\.\\d+\\b" },
        { "name": "constant.numeric.integer.algo", "match": "\\b\\d+\\b" }
      ]
    },
    "keywords": {
      "patterns": [
        { "name": "keyword.control.algo", "match": "\\b(?:procedure|if|then|else|while|for|do|return|expand|record|type|end)\\b" }
      ]
    },
    "constants": {
      "patterns": [
        { "name": "constant.language.algo", "match": "\\b(?:NIL|\\u221E)\\b" }
      ]
    },
    "operators": {
      "patterns": [
        { "name": "keyword.operator.logical.algo", "match": "\\band\\b" },
        { "name": "keyword.operator.comparison.algo", "match": "=|\\u2260|!=|<=|>=|<|>" }
      ]
    },
    "assignment": {
      "patterns": [
        { "name": "keyword.operator.assignment.algo", "match": "\\u2190|<-" }
      ]
    },
    "arrays": {
      "patterns": [
        { "name": "variable.other.array.algo", "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\s*\\[[^\\]]*\\]" }
      ]
    },
    "identifiers": {
      "patterns": [
        { "name": "variable.other.algo", "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b" }
      ]
    },
    "record": {
      "name": "meta.record.algo",
      "begin": "\\brecord\\b\\s+([A-Za-z_][A-Za-z0-9_]*)\\s*:\\s*$",
      "beginCaptures": {
        "1": { "name": "entity.name.type.algo" }
      },
      "end": "\\bend\\b",
      "patterns": [
        { "include": "#field" }
      ]
    },
    "field": {
      "match": "\\s*([A-Za-z_][A-Za-z0-9_]*)\\s*:\\s*([^\\s]+)\\s*(//.*)?$",
      "captures": {
        "1": { "name": "variable.other.property.algo" },
        "2": { "name": "storage.type.algo" },
        "3": { "name": "comment.line.double-slash.algo" }
      }
    },
    "type": {
      "match": "\\btype\\b\\s+([A-Za-z_][A-Za-z0-9_]*)\\s*=\\s*(.+)$",
      "captures": {
        "1": { "name": "entity.name.type.algo" },
        "2": { "name": "meta.type.algo" }
      }
    }
  }
}
