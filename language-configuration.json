{
  "comments": {
    "lineComment": "//"
  },
  "brackets": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"]
  ],
  "autoClosingPairs": [
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "{", "close": "}" }
  ],
  "surroundingPairs": [
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "{", "close": "}" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" }
  ],
  "indentationRules": {
    "increaseIndentPattern": ".*:\\s*$",
    "decreaseIndentPattern": "^\\s*(else|end)\\b.*"
  },
  "onEnterRules": [
    {
      "beforeText": ".*:\\s*$",
      "action": { "indentAction": "indent" }
    }
  ],
  "folding": {
    "offSide": true,
    "markers": {
      "start": "^\\s*#region\\b",
      "end": "^\\s*#endregion\\b"
    }
  }
}
